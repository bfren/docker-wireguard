#!/command/with-contenv bash

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Check variables.
#======================================================================================================================

[[ -z "${1-}" ]] && bf-error "You must pass a peer." "wg-conf"
PEER="${1}"


#======================================================================================================================
# Export this user's config.
#======================================================================================================================

CONFIG=${WIREGUARD_PEERS_D}/${PEER}/config
[[ -f ${CONFIG} ]] || bf-error "Configuration file for ${PEER} does not exist." "wg-conf"

cat ${CONFIG}
